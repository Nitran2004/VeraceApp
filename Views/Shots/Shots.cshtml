@{
    ViewData["Title"] = "Cervezas";
}

<style>
    .menu-container {
        padding: 20px;
        background-color: white;
    }

    .menu-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .menu-item {
        display: block;
        width: 180px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 10px;
        text-align: center;
        text-decoration: none;
        color: inherit;
        background-color: #fefefe;
        transition: transform 0.2s;
    }

        .menu-item:hover {
            transform: scale(1.03);
        }

        .menu-item img {
            width: 100%;
            height: 120px;
            border-radius: 10px;
            object-fit: cover;
        }

    .menu-item-text {
        margin-top: 10px;
        font-size: 1.2em;
        font-weight: bold;
    }

    media (max-width: 600px) {
        .menu-item

    {
        width: 100%;
    }

    }
</style>

<div class="menu-container">
    <h2 class="text-center mb-4">
        Cervezas
    </h2>

    <div class="menu-grid">
        <a href="/Shots/JagerBomb" class="menu-item">
            <img src="~/images1/shottequila.jpg" alt="Shot de tequila" />
            <div class="menu-item-text">Shot de tequila - $3</div>
        </a>
        <a href="/Shots/Shotdeaguardiente" class="menu-item">
            <img src="~/images1/shotardiente.jpg" alt="Shot de aguardiente" />
            <div class="menu-item-text">Shot de aguardiente - $3</div>
        </a>
        <a href="/Shots/ShotdeJager" class="menu-item">
            <img src="~/images1/jaggerbomb.jpg" alt="Shot de Jager" />
            <div class="menu-item-text">Shot de Jager - $6</div>
        </a>
        <a href="/Shots/JagerBomb" class="menu-item">
            <img src="~/images1/jaggerbomb.jpg" alt="Jager Bomb" />
            <div class="menu-item-text">Jager Bomb - $10</div>
        </a>
    </div>
