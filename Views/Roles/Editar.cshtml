@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Editar rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar rol</h1>

<form asp-controller="Roles" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre del rol" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6">
            <button type="submit" class="btn-no-bootstrap button-spacing">Editar rol <i class="bi bi-arrow-right-circle-fill"></i></button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
