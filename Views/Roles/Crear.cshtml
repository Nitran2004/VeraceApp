@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Crear nuevo rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear nuevo rol</h1>

<form asp-controller="Roles" asp-action="Crear" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" placeholder="Ingresa rol" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6">
            <button type="submit" class="btn-no-bootstrap button-spacing">Crear rol <i class="bi bi-arrow-right-circle-fill"></i></button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
