<div class="row">
    <div class="col-sm-12">
        <div class="card border">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3><strong>Lista de roles</strong></h3>
                <a class="btn btn-success" asp-controller="Roles" asp-action="Crear">Agregar Rol</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="d-lg-table table-bordered" id="tablaRoles" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-controller="Roles" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                                            <form asp-controller="Roles" asp-action="Borrar" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                <button type="submit" onclick="return confirm('¿Está seguro de borrar este registro?')" class="btn btn-danger">Borrar</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
